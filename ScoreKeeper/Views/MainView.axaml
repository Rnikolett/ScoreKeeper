<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ScoreKeeper.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ScoreKeeper.Views.MainView"
             x:DataType="vm:MainViewModel"
             x:CompileBindings="True">
  <!--
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>
-->

  <SplitView IsPaneOpen = "{Binding IsPaneOpen}"
             OpenPaneLength="300"
             CompactPaneLength="40"
             DisplayMode="CompactInline"
             PaneBackground="#2d2d2d">

    <SplitView.Pane>
      <StackPanel Spacing="5"
                  Margin="5">
        <Button Command="{Binding TriggerPaneCommand}">
          <PathIcon Data="{StaticResource LineHorizontal3Regular}"/>
        </Button>

        <Button Command="{Binding OpenAddGamesCommand}"
                Width="280"
                Margin="0 5 0 5"
                Background="Gray"
                Foreground="White"
                IsEnabled="{Binding IsAddGame}">Add Game</Button>
        <Button Command="{Binding OpenPlayersCommand}"
                Width="280"
                Margin="0 5 0 5"
                Foreground="White"
                Background="Gray"
                IsEnabled="{Binding IsPlayerList}">Players</Button>
        <Button Command="{Binding OpenGamesCommand}"
                Width="280"
                Margin="0 5 0 5"
                Foreground="White"
                Background="Gray"
                IsEnabled="{Binding IsHomePage}">Previous Games</Button>

      </StackPanel>
    </SplitView.Pane>
    <SplitView.Content>
      <Border CornerRadius="30 30 0 0"
              Background="White">
        <StackPanel>

          <Border Background="#2d2d2d">
            <TextBlock Margin="5"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Text="Scorekeeper"/>
          </Border>

          <TransitioningContentControl Content="{Binding CurrentPage}"/>

        </StackPanel>
      </Border>

    </SplitView.Content>

  </SplitView>

</UserControl>
